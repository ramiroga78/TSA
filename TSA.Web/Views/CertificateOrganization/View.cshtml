@using TSA.Infrastructure.DTOs
@model CertificateOrganizationDTO

@{
    ViewData["Title"] = "Ver Organización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Organizaciones</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="CertificateOrganization" asp-action="Index">Listado de Organizaciones</a></li>
                    <li class="breadcrumb-item active">Ver Organizaci&oacute;n</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ver Organizaci&oacute;n</h3>
        </div>
        <div class="card-body">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-ban"></i> Alerta!</h5>

                    @Html.ValidationSummary()
                </div>
            }
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.CertificateOrganizationTypeId"></label>
                </div>
                <div class="col-8">
                    @foreach (var item in Model.CertificateOrganizationTypes)
                    {
                        @if (item.Id == Model.CertificateOrganizationTypeId)
                        {
                            <input readonly type="text" name="CertificateOrganizationTypeId" id="CertificateOrganizationTypeId" class="form-control" value="@Model.CertificateOrganizationType.Description">
                        }
                    }
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.CommonName"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="@Model.CommonName" class="form-control" name="commonName">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.OrganizationName"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="@Model.OrganizationName" class="form-control" name="OrganizationName">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.CountryList"></label>
                </div>
                <div class="col-8">
                    <input readonly asp-for="@Model.CountryName" class="form-control" name="CountryName">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-12 text-center">
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
</section>

