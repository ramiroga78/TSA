@model TSA.Infrastructure.DTOs.NTPServerDTO;
@{
    ViewData["Title"] = "Ver Servidor NTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Servidor NTP</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="NTPServers" asp-action="Index">Listado de Servidores NTP</a></li>
                    <li class="breadcrumb-item active">Ver Servidor NTP</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ver Servidor NTP</h3>
        </div>
        <div class="card-body">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-ban"></i> Alerta!</h5>

                    @Html.ValidationSummary()
                </div>
            }
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ServerUrl"></label>
                </div>
                <div class="col-8">
                    <input readonly type="text" name="ServerUrl" id="ServerUrl" placeholder="Ingrese la IP o FQDN" asp-for="ServerUrl" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 text-center">
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>
</section>